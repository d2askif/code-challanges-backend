{
  "name": "code-challenges-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "nodemon --exec ts-node src/server.ts",
    "test": "yarn run jest",
    "build": "tsc --version && tsc -d -p tsconfig.json"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.0.19",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/lodash": "^4.14.144",
    "@types/moment-timezone": "^0.5.7",
    "@types/mongoose": "^5.5.18",
    "@types/node": "^12.7.8",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "apollo-errors": "^1.9.0",
    "apollo-resolvers": "^1.4.1",
    "apollo-server": "^2.14.2",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.1.0",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.26",
    "mongoose": "^5.7.1"
  },
  "license": "ISC"
}
